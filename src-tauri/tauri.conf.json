{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nova IDE",
  "version": "0.1.0",
  "identifier": "com.build.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nova IDE",
        "width": 1280,
        "height": 800,
        "decorations": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "core": {
      "window": {
        "all": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
